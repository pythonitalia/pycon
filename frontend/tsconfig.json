{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["esnext", "dom"],
    "jsx": "preserve",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "validate": false
      }
    ]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
