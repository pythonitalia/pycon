{
  "name": "frontend",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "start": "concurrently \"yarn run dev\" \"yarn run dts --watch\" \"yarn run graphql-types --watch\"",
    "dev": "node scripts/start.js",
    "dts": "tcm src -c -o src_gen",
    "graphql-types": "apollo codegen:generate --target typescript --tagName graphql --schema schema.json --globalTypesFile=src/types/global.ts types"
  },
  "devDependencies": {
    "express": "^4.16.3",
    "graphql-tag": "^2.10.1",
    "http-proxy-middleware": "^0.19.0",
    "parcel-bundler": "^1.9.7",
    "postcss-modules": "^1.4.1",
    "prettier": "1.16.4",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.17.0",
    "typed-css-modules": "^0.3.5",
    "typescript": "^3.3.1"
  },
  "dependencies": {
    "@reach/router": "^1.1.1",
    "@types/reach__router": "^1.2.3",
    "@types/react": "^16.8.1",
    "@types/react-dom": "^16.0.11",
    "@types/webpack-env": "^1.13.7",
    "apollo": "^1.9.1",
    "apollo-cache-inmemory": "^1.4.2",
    "apollo-client": "^2.4.12",
    "apollo-link": "^1.2.2",
    "apollo-link-error": "^1.1.0",
    "apollo-link-http": "^1.5.4",
    "components": "^0.1.0",
    "concurrently": "^4.0.1",
    "graphql": "^0.9.0 || ^0.10.0 || ^0.11.0 || ^0.12.0 || ^0.13.0",
    "react": "^16.7.0",
    "react-apollo": "^2.1.11",
    "react-dom": "^16.4.2"
  },
  "postcss": {
    "modules": true,
    "plugins": {
      "autoprefixer": {
        "browsers": [
          ">1%",
          "last 2 versions",
          "not ie < 11"
        ]
      },
      "postcss-modules": {
        "camelCase": true,
        "generateScopedName": "[name]_[local]_[hash:base64:5]"
      }
    }
  }
}
